-- AIMBOT MOBILE + PC (GRUD√ÉO)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

local Aimbot = {}
Aimbot.Enabled = false
Aimbot.Smoothness = 0.15 -- menor = mais grudado
Aimbot.TeamCheck = true
Aimbot.IsEnemy = function() return true end

local currentTarget = nil

local function getClosestEnemy()
    local closest, dist = nil, math.huge
    local camPos = Camera.CFrame.Position

    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("HumanoidRootPart") then
            if Aimbot.IsEnemy(v) then
                local hrp = v.HumanoidRootPart
                local d = (camPos - hrp.Position).Magnitude
                if d < dist then
                    dist = d
                    closest = hrp
                end
            end
        end
    end

    return closest
end

RunService.RenderStepped:Connect(function()
    if not Aimbot.Enabled then return end

    currentTarget = getClosestEnemy()
    if not currentTarget then return end

    local camCF = Camera.CFrame
    local targetPos = currentTarget.Position

    local newCF = camCF:Lerp(
        CFrame.new(camCF.Position, targetPos),
        Aimbot.Smoothness
    )

    Camera.CFrame = newCF
end)

function Aimbot:Enable()
    self.Enabled = true
end

function Aimbot:Disable()
    self.Enabled = false
end

return Aimbot
